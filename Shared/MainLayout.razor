@inherits LayoutComponentBase


<AuthorizeView>
    <Authorized>
        <Layout Sider="true">
            <LayoutSider>
                <LayoutSiderContent>
                    <NavMenu/>
                </LayoutSiderContent>
            </LayoutSider>
            <Layout>
                <LayoutHeader Fixed="true">
                    <Header></Header>
                </LayoutHeader>
                <LayoutContent Style="margin: 1vw 0 0 1vw;">
                    @Body
                </LayoutContent>
            </Layout>
        </Layout>
    </Authorized>
    <NotAuthorized>
        <Login></Login>
    </NotAuthorized>
</AuthorizeView>